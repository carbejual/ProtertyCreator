<Window x:Class="ProtertyCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtertyCreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="InputTXT" HorizontalAlignment="Left" Height="385" Margin="20,15,0,0" VerticalAlignment="Top" Width="235" >
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="SwitchButton" Content="转换" HorizontalAlignment="Left" Margin="300,315,0,0" VerticalAlignment="Top" Width="75" Click="SwitchButton_Click"/>
        <CheckBox x:Name="Toggle" Content="只读" HorizontalAlignment="Left" Margin="269,205,0,0" VerticalAlignment="Top" Height="20" Width="161"/>
        <RichTextBox x:Name="OutTXT" HorizontalAlignment="Left" Height="385" Margin="440,15,0,0" VerticalAlignment="Top" Width="330">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
